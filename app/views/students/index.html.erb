<center>
  <p id="notice"><%= notice %></p>

  <h1 class="module-title">Octocats!</h1>

  <div class="col-sm-12">
    <ul id="filters" class="filter font-alt hidden-xs">
      <li><a href="#" data-filter="*" class="current wow fadeInUp animated" style="visibility: visible;">All</a></li>
      <li><a href="#" data-filter=".student" class="wow fadeInUp animated" data-wow-delay="0.2s" style="visibility: visible; -webkit-animation-delay: 0.2s;">Students</a></li>
      <li><a href="#" data-filter=".j" class="wow fadeInUp animated" data-wow-delay="0.2s" style="visibility: visible; -webkit-animation-delay: 0.2s;">Starts with J</a></li>
    </ul>
  </div>

  <div class="gallery">
    <ul id="works-grid" class="works-grid works-grid-gut works-grid-4 works-hover-w" style="position: relative; height: 531px;">
      <% @students.each do |student| %>
        <li class="work-item student <%= "j" if student.name[0] == "J" %>" style="position: absolute; left: 0px; top: 0px;">
          <a href="students/<%= student.id %>">
            <div class="work-image">
              <img src="<%= student.image_url %>" alt="">
            </div>
            <div class="work-caption font-alt">
              <h3 class="work-title"><%= student.name %></h3>
              <div class="work-descr">
                Web-0415
              </div>
            </div>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</center>